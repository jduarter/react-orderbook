{
  compilerOptions: {
    noImplicitAny: true,
    strictNullChecks: true,
    allowJs: true,
    checkJs: false,
    allowSyntheticDefaultImports: true,
    esModuleInterop: true,
    isolatedModules: true,
    jsx: 'react-native',
    lib: ['es6'],
    moduleResolution: 'node',
    noEmit: true,
    emitDeclarationOnly: true,
    strict: true,
    target: 'esnext',
    noUnusedLocals: true,
    noUnusedParameters: true,
    rootDir: 'src',
    outDir: 'build'
  },

  include: ['src', 'types/**', 'app.d.ts', 'tests/**/*'],
  exclude: [
    'node_modules',
    'babel.config.js',
    'metro.config.js',
    'jest.config.js'
  ],
  declarationMap: true
};
